<!DOCTYPE html>
<html>
<head>
	  <%= erb(:_header) %>
    <link href="<%= url('./styles/main.css') %>" rel="stylesheet" type="text/css" />
<body>

    <div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container">
          <div class="masthead clearfix">
            <div class="inner">
              <h3 class="masthead-brand ">
              	Product Key Search
              </h3>
              <nav class="nav nav-masthead">
                <a class="nav-link" href="/">Home</a>
                <a class="nav-link" href="/search">Search</a>
                <a class="nav-link" href="/schedule">Schedule</a>
              </nav>
            </div>
          </div>

          <div class="inner cover pb-5">
      			<h1>Sign Up</h1>
          </div>
          

          <div class="inner cover mb-5">
            <div class="container">
            	<form action="/signup" method="POST">
				    <div class="form-group row">
				      <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
				      <div class="col-sm-10">
				        <input type="email" name="login[name]" class="form-control" id="inputEmail3" placeholder="Email">
				      </div>
				    </div>
				    <div class="form-group row">
				      <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
				      <div class="col-sm-10">
				        <input type="password" name="login[password]" class="form-control" id="inputPassword3" placeholder="Password">
				      </div>
				    </div>
		            <div class="form-group row ">
			            <div class="col-sm-12">
			              <input type="submit" class="btn btn-lg btn-secondary mt-4" value="Sign Up">
			            </div>
		            </div>
		            <div class="form-group row">
			            <div class="col-sm-12">
			            	<p class="lead">Or <a href="/login">Login</a></p>		            	
			            </div> 
		            </div>
                <% if @error %>
                <div class="form-group row">
                  <div class="col-sm-12">
                    <p class="lead"><%= @error %></p>                 
                  </div> 
                </div>
                <% end %>                    
            	</form>
            </div>
          </div>

          <div class="mastfoot">
                <p>Built by <a class="nav-link active" href="https://www.github.com/samuel-pedraza" target="_blank">Samuel Pedraza</a></p>
          </div>

        </div>

      </div>

    </div>
</body>
</html>