			      </label>
		      	</div>
		      	
		      	<div class="form-check pr-3">
			      <label for="Toolfetch" class="form-check-label">
			      	<input type="checkbox" class="form-check-input" value="toolfetch"  name="tool"/>
			      		Toolfetch
			      </label>
		      	</div>

		      	<div class="form-check pr-3">
			      <label for="webstaurant" class="form-check-label">
				      <input type="checkbox" class="form-check-input" value="webstaurant"  name="hof"/>
				      	Webstaurant
			      </label>
				</div>

		      	<div class="form-check pr-3">
			      <label for="ZorinMaterial" class="form-check-label">
			      	<input type="checkbox" class="form-check-input" value="zorinmaterial" name="zorin"/>
			      		Zorin Material
			      </label>
		      	</div>
		      	
		      	<div class="form-check pr-3">
			      <label for="GlobalIndustrial" class="form-check-label">
			      	<input type="checkbox" class="form-check-input" value="globalindustrial"  name="globalindustrial"/>
			      		Global Industrial
			      </label>
		      	</div>

		      	<div class="form-check pr-3">
			      <label for="industrialproducts" class="form-check-label">
				      <input type="checkbox" class="form-check-input" value="industrialproducts"  name="industrialproducts"/>
				      	Industrial Products
			      </label>
				</div>

		      	<div class="form-check pr-3">
			      <label for="Radwell" class="form-check-label">
			      	<input type="checkbox" class="form-check-input" value="radwell" name="radwell"/>
			      		Radwell
			      </label>
		      	</div>
		      	
		      	<div class="form-check pr-3">
			      <label for="digitalbuyer" class="form-check-label">
			      	<input type="checkbox" class="form-check-input" value="digitalbuyer"  name="digitalbuyer"/>
			      		Digital Buyer
			      </label>
		      	</div>
	      	</div>
	  		
			<%= erb(:_example) %>

	      	<input type="text" class="mb-3" name="q"/>
	  		
	  		<input type="submit" class="btn btn-md btn-secondary" />

	    </form>
  </div>
</div>


<div class="container">
	<div class="row">
		<form method="POST" action="/search">
			<h3>Search Crap</h3>
		
			<select name="productclass">
			  <option value="wireproduct">Wire product</option>
			  <option value="lockers">Lockers</option>
			  <option value="matting">Matting</option>
			  <option value="mezzanine">Mezzanine</option>
			  <option value="inplantoffice">In Plant Office</option>
			  <option value="stretchwrapper">Stretch Wrapper</option>
			</select>
			
			<input type="submit" class="btn btn-md mt-3 " />		
		
		</form>
	</div>

	<% if @returninformation %>
		<%= @returninformation %>
	<% end %>

</div>


<% if @hof %>
<div class="container">
	<h1 class="mt-3 mb-3">HOFequipment</h1>
	<table class="table table-striped table-hover">
		<thead class="thead-inverse">
			<td>Product Key</td>
			<td>Price</td>
		</thead>
		<% if @hofarray %>
			<% @hofarray.each_with_index do |item, index| %>
				<% if index % 2 == 0 %>
				<tr>
					<td><%= item %></td>
					<% elsif index % 2 == 1 %>
					<td>$<%= item %></td>
				</tr>				
				<% end %>
			<% end %>
		<% end %>
	</table>

	<div class="container mb-3">
		<div class="row">
			<a class="btn btn-secondary btn-lg btn-block" href="/csv/hofequipment" role="button" download="HOFequipment">Download HOFequipment to Excel</a>	
		</div>	
	</div>
</div>

<% end %>


