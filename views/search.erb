<!DOCTYPE html>
<html>
	  <%= erb(:_header) %>
	  <link href="<%= url('./styles/input.css') %>" rel="stylesheet" type="text/css" />
<body class="bg-faded">

<%= erb(:_navbar) %>

<div id="container" class="container mt-5">
  <div class="row">

	    <form action="/search" method="POST" class="p-3">

	  		<h3>Select Websites to Query</h3>

	  		<div class="form-inline">
		      	<div class="form-check pr-3">
			      <label for="hofequipment" class="form-check-label">
				      <input type="checkbox" class="form-check-input" value="hofequipment"  name="hofequipment"/>
				      	HOFequipment
			      </label>
				</div>

		      	<div class="form-check pr-3">
			      <label for="IndustrialSafety" class="form-check-label">
			      	<input type="checkbox" class="form-check-input" value="industrialsafety" name="industrialsafety"/>
			      		IndustrialSafety
			      </label>
		      	</div>

		      	<div class="form-check pr-3">
			      <label for="Toolfetch" class="form-check-label">
			      	<input type="checkbox" class="form-check-input" value="toolfetch"  name="toolfetch"/>
			      		Toolfetch
			      </label>
		      	</div>

		      	<div class="form-check pr-3">
			      <label for="webstaurant" class="form-check-label">
				      <input type="checkbox" class="form-check-input" value="webstaurant"  name="webstaurant"/>
				      	Webstaurant
			      </label>
				</div>

		      	<div class="form-check pr-3">
			      <label for="GlobalIndustrial" class="form-check-label">
			      	<input type="checkbox" class="form-check-input" value="globalindustrial"  name="globalindustrial"/>
			      		Global Industrial
			      </label>
		      	</div>

		      	<div class="form-check pr-3">
			      <label for="industrialproducts" class="form-check-label">
				      <input type="checkbox" class="form-check-input" value="industrialproducts"  name="industrialproducts"/>
				      	Industrial Products
			      </label>
				</div>

		      	<div class="form-check pr-3">
			      <label for="Radwell" class="form-check-label">
			      	<input type="checkbox" class="form-check-input" value="radwell" name="radwell"/>
			      		Radwell
			      </label>
		      	</div>
	      	</div>

			<%= erb(:_example) %>

	      	<input type="text" class="mb-3" name="query"/>

	  		<input type="submit" class="btn btn-md btn-secondary" />

	    </form>
  </div>
</div>

