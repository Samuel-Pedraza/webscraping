<script type="text/javascript">
document.getElementById("submission").addEventListener("click", function(e){
  e.preventDefault();

  var string = document.getElementById("myvalue").value;
  string = string.replace("MODEL	OUR PRICE	LIST PRICE	OUR COST	COMPETITOR	COMPETITOR NAME", "").replace(/\$(\d+)\.(\d+)/, "").replace(/\t/, "").split("\n")

  var sum = 0;

  for(var i = 0; i < string.length; i++){
    sum += Math.round((Math.random() * 3) + 1, 2);
  }

  lengthOfTime(sum);

  document.getElementById("myvalue").value = "";

})

function lengthOfTime(sum){
	if(sum > 60){
		//console.log(sum/60, 3);
		document.getElementsByClassName("info")[0].innerHTML = "About " + Math.round(sum/60, 2) + " minutes to finish";
	} else {
		document.getElementsByClassName("info")[0].innerHTML = "About " + sum + " seconds to finish";
	}
}

